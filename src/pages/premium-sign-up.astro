---
import { SignUp } from '@clerk/astro/components';

// Ensure environment variable is available
const publishableKey = import.meta.env.PUBLIC_CLERK_PUBLISHABLE_KEY;
if (!publishableKey) {
  throw new Error('Missing Clerk Publishable Key');
}
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Join Us - AI Product Development Wiki</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --premium-primary: #0066ff;
            --premium-primary-dark: #0052cc;
            --premium-secondary: #6366f1;
            --premium-accent: #10b981;
            --premium-gray-50: #fafafa;
            --premium-gray-100: #f5f5f5;
            --premium-gray-200: #e5e5e5;
            --premium-gray-400: #a3a3a3;
            --premium-gray-600: #525252;
            --premium-gray-800: #262626;
            --premium-gray-900: #171717;
            --premium-glass: rgba(255, 255, 255, 0.1);
            --premium-glass-border: rgba(255, 255, 255, 0.2);
            --premium-shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --premium-shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            --premium-gradient-primary: linear-gradient(135deg, var(--premium-primary) 0%, var(--premium-secondary) 100%);
            --premium-gradient-success: linear-gradient(135deg, var(--premium-accent) 0%, #22c55e 100%);
            --premium-transition-normal: 250ms ease-out;
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #10b981 0%, #059669 50%, #047857 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }

        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: 
                radial-gradient(circle at 20% 80%, rgba(16, 185, 129, 0.4) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(34, 197, 94, 0.4) 0%, transparent 50%),
                radial-gradient(circle at 40% 40%, rgba(5, 150, 105, 0.4) 0%, transparent 50%);
            animation: backgroundShift 20s ease-in-out infinite;
        }

        @keyframes backgroundShift {
            0%, 100% { transform: scale(1) rotate(0deg); }
            50% { transform: scale(1.1) rotate(-5deg); }
        }

        .auth-container {
            position: relative;
            z-index: 1;
            width: 100%;
            max-width: 440px;
            padding: 2rem;
        }

        .auth-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid var(--premium-glass-border);
            border-radius: 1.5rem;
            padding: 3rem 2.5rem;
            box-shadow: var(--premium-shadow-xl);
            position: relative;
            overflow: hidden;
            transform: translateY(0);
            transition: all var(--premium-transition-normal);
        }

        .auth-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--premium-gradient-success);
        }

        .auth-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        }

        .brand-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .brand-logo {
            width: 64px;
            height: 64px;
            background: var(--premium-gradient-success);
            border-radius: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            box-shadow: var(--premium-shadow-lg);
            animation: logoFloat 6s ease-in-out infinite;
        }

        @keyframes logoFloat {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-10px) rotate(5deg); }
        }

        .brand-logo svg {
            width: 32px;
            height: 32px;
            color: white;
        }

        .brand-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--premium-gray-900);
            margin: 0 0 0.5rem;
            background: var(--premium-gradient-success);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .brand-subtitle {
            font-size: 1rem;
            color: var(--premium-gray-600);
            margin: 0 0 1.5rem;
            font-weight: 400;
        }

        .features-list {
            list-style: none;
            padding: 0;
            margin: 0 0 1.5rem;
            text-align: left;
        }

        .features-list li {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.5rem 0;
            font-size: 0.875rem;
            color: var(--premium-gray-600);
        }

        .features-list .check-icon {
            width: 16px;
            height: 16px;
            background: var(--premium-gradient-success);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }

        .features-list .check-icon svg {
            width: 10px;
            height: 10px;
            color: white;
        }

        .auth-form-container {
            position: relative;
        }

        /* Custom Clerk component styling */
        .auth-form-container :global(.cl-rootBox) {
            width: 100%;
        }

        .auth-form-container :global(.cl-card) {
            background: transparent !important;
            box-shadow: none !important;
            border: none !important;
        }

        .auth-form-container :global(.cl-headerTitle) {
            display: none !important;
        }

        .auth-form-container :global(.cl-headerSubtitle) {
            display: none !important;
        }

        .auth-form-container :global(.cl-socialButtonsBlockButton) {
            display: none !important;
        }

        .auth-form-container :global(.cl-dividerRow) {
            display: none !important;
        }

        .auth-form-container :global(.cl-formFieldInput) {
            border: 1.5px solid var(--premium-gray-200) !important;
            border-radius: 0.75rem !important;
            padding: 0.875rem 1rem !important;
            font-size: 0.9rem !important;
            transition: all var(--premium-transition-normal) !important;
        }

        .auth-form-container :global(.cl-formFieldInput:focus) {
            border-color: var(--premium-accent) !important;
            box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1) !important;
        }

        .auth-form-container :global(.cl-formButtonPrimary) {
            background: var(--premium-gradient-success) !important;
            border: none !important;
            border-radius: 0.75rem !important;
            padding: 0.875rem 1.5rem !important;
            font-weight: 600 !important;
            font-size: 0.9rem !important;
            transition: all var(--premium-transition-normal) !important;
        }

        .auth-form-container :global(.cl-formButtonPrimary:hover) {
            transform: translateY(-2px) !important;
            box-shadow: var(--premium-shadow-lg) !important;
        }

        .footer-links {
            text-align: center;
            margin-top: 2rem;
            padding-top: 1.5rem;
            border-top: 1px solid var(--premium-gray-200);
        }

        .footer-link {
            color: var(--premium-gray-600);
            text-decoration: none;
            font-size: 0.875rem;
            transition: color var(--premium-transition-normal);
        }

        .footer-link:hover {
            color: var(--premium-accent);
        }

        .floating-elements {
            position: absolute;
            width: 100%;
            height: 100%;
            pointer-events: none;
            overflow: hidden;
        }

        .floating-element {
            position: absolute;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation: float 18s infinite linear;
        }

        .floating-element:nth-child(1) {
            width: 100px;
            height: 100px;
            top: 5%;
            left: 5%;
            animation-delay: 0s;
        }

        .floating-element:nth-child(2) {
            width: 60px;
            height: 60px;
            top: 60%;
            right: 5%;
            animation-delay: 6s;
        }

        .floating-element:nth-child(3) {
            width: 80px;
            height: 80px;
            top: 25%;
            right: 15%;
            animation-delay: 12s;
        }

        .floating-element:nth-child(4) {
            width: 40px;
            height: 40px;
            top: 75%;
            left: 20%;
            animation-delay: 3s;
        }

        @keyframes float {
            0% { transform: translateY(0px) rotate(0deg); opacity: 0; }
            10% { opacity: 0.6; }
            90% { opacity: 0.6; }
            100% { transform: translateY(-1200px) rotate(360deg); opacity: 0; }
        }

        /* Mobile responsive */
        @media (max-width: 480px) {
            .auth-container {
                padding: 1rem;
            }

            .auth-card {
                padding: 2rem 1.5rem;
                border-radius: 1rem;
            }

            .brand-title {
                font-size: 1.5rem;
            }

            .brand-subtitle {
                font-size: 0.9rem;
            }

            .features-list {
                margin-bottom: 1rem;
            }
        }

        /* Loading animation */
        .auth-card {
            animation: slideInUp 0.6s ease-out;
        }

        @keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Premium badge animation */
        .premium-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: var(--premium-gradient-success);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 2rem;
            font-size: 0.8rem;
            font-weight: 600;
            margin-bottom: 1rem;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }
    </style>
</head>
<body>
    <div class="floating-elements">
