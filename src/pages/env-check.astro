---
// Check environment variables
const pubKey = import.meta.env.PUBLIC_CLERK_PUBLISHABLE_KEY;
const secretKey = import.meta.env.CLERK_SECRET_KEY;
---

<html>
<head>
    <title>Environment Check</title>
</head>
<body>
    <h1>Environment Variables Check</h1>
    
    <h2>Publishable Key</h2>
    <p><strong>Set:</strong> {pubKey ? 'Yes' : 'No'}</p>
    {pubKey && (
        <p><strong>Value:</strong> <code>{pubKey}</code></p>
    )}
    
    <h2>Secret Key</h2>
    <p><strong>Set:</strong> {secretKey ? 'Yes' : 'No'}</p>
    {secretKey && (
        <p><strong>First 20 chars:</strong> <code>{secretKey.substring(0, 20)}...</code></p>
    )}
    
    <h2>Expected Values</h2>
    <p><strong>Publishable should start with:</strong> <code>pk_test_</code></p>
    <p><strong>Secret should start with:</strong> <code>sk_test_</code></p>
    
    <p><a href="/">Back to Home</a></p>
</body>
</html>