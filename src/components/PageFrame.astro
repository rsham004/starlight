---
import type { Props } from '@astrojs/starlight/props';
import Default from '@astrojs/starlight/components/PageFrame.astro';
import { SignedIn, SignedOut, UserButton, SignInButton } from '@clerk/astro/components';
---

<Default {...Astro.props}>
  <div class="auth-floating">
    <SignedIn>
      <div style="display: flex; align-items: center; gap: 1rem; background: white; padding: 0.5rem 1rem; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);">
        <UserButton afterSignOutUrl="/" />
      </div>
    </SignedIn>
    <SignedOut>
      <div style="display: flex; gap: 0.5rem;">
        <SignInButton mode="modal">
          <button style="background: #2563eb; color: white; padding: 0.5rem 1rem; border-radius: 4px; border: none; cursor: pointer; font-size: 0.9rem;">Sign In</button>
        </SignInButton>
        <a href="/sign-up" style="background: #059669; color: white; padding: 0.5rem 1rem; border-radius: 4px; text-decoration: none; font-size: 0.9rem;">Sign Up</a>
      </div>
    </SignedOut>
  </div>
  <slot />
</Default>

<style>
  .auth-floating {
    position: fixed;
    top: 1rem;
    right: 1rem;
    z-index: 1000;
  }
</style>